{
    "env":
    {
        "browser": true,
        "es6": false,
        "node": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions":
    {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "plugins": [
        "snakecasejs"
    ],
    "settings": {
        "snakecasejs/whitelist": ["BrowserWindow", "webPreferences", "enableRemoteModule", "nodeIntegration"],
        "snakecasejs/snakecasejs": "warn"
    },
    "rules":
    {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "off",
        "no-undef": "off",
        "no-console": [
            "warn"
        ],
        "no-constant-condition": [
            "warn"
        ],
        "require-atomic-updates": "warn",
        "curly": ["error", "all"],
        "brace-style": ["error", "1tbs",
        {
            "allowSingleLine": false
        }]
    }
}